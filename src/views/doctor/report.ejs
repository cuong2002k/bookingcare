</head>

<body>
    <!--  -->
    <div class="sidebar">
        <a href="/home/<%=userid.id%>"><i class="mai-home" style="color: white;"></i> Home</a>

        <!-- <a href="/admin/news-user/<%=userid.id%>"><i class="mai-add" style="color: white;"></i> News User</a>  -->
        <a  href="/admin/user/<%=userid.id%>"><i class="mai-calendar" style="color: white;"></i>
            Appointment</a>
            <a class="active" href="/admin/report/<%=userid.id%>"><i class="mai-pencil" style="color: white;"></i>
                Personal report</a>   
        <a href="/more/<%=userid.id%>/user/<%=userid.id%>"><i class="mai-people" style="color: white;"></i> Profile</a>
    </div>

    <div class="content">
        <div class="page-section">
            <div class="container">
              <h1 class="text-center wow fadeInUp">Personal Report</h1>
              <form class="main-form" action="" method="post">
                <div class="row mt-5 ">
                  <div class="col-12 col-sm-6 py-2 wow fadeInLeft">
                    <input type="text" class="form-control" placeholder="Full name" name="name" required>
                  </div>
                  <div class="col-12 col-sm-6 py-2 wow fadeInRight">
                    <input type="text" class="form-control" placeholder="Email address.." name="email" required>
                  </div>
                  <div class="col-12 col-sm-6 py-2 wow fadeInLeft" data-wow-delay="300ms">
                    <input type="date" class="form-control" name="date" required>
                  </div>
                  <div class="col-12 col-sm-6 py-2 wow fadeInRight" data-wow-delay="300ms">
                    <input type="text" class="form-control" name="number" placeholder="Number.." required>
                  </div>
                  <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                    <input type="text" class="form-control" placeholder="Address.." name="address" required>
                  </div>
                  <div class="col-12 py-2 wow fadeInUp" data-wow-delay="300ms">
                    <textarea name="message" id="message" class="form-control" rows="6" placeholder="Enter Report.." required></textarea>
                  </div>
                </div>
        
                <button type="submit" class="btn btn-primary mt-3 wow zoomIn">Submit Request</button>
              </form>
            </div>
          </div>
        
    </div>
    </div>
</body>

</html>