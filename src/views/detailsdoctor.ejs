  <div class="container mt-5">
      <!-- get hours -->
      
      <%
        let timestart = [8,9,10,14,15,16];
        let   timeend = ["8:00-9:00","9:00-10:00","10:00-11:00","14:00-15:00","15:00-16:00","16:00-17:00"];
            let d = new Date();
            let date = d.getDate();
            let hours = d.getHours();
            let month = d.getMonth() + 1;
            let year = d.getFullYear();
      %>
       
      <div class="row">
        <div class="nav flex-column nav-pills col-sm-2" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active text-center" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">
                Today <%= date + "/" + month %>
            </a>
            <a class="nav-link text-center" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">
                 <%= (date+1) + "/" + month %>
            </a>
            <a class="nav-link text-center" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">
                 <%= (date+2) + "/" + month %>
            </a>
          </div>
          <div class="tab-content col-sm-5" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
                  <h5> <i class="mai-calendar"></i> Medical examination schedule</h5>
                    <% for(let i = 0 ; i < timestart.length ; i++){ 
                      if(hours < timestart[i]){
                      %>
                    
                        <button class=" mt-2 py-2" type="button" id="buttonclick" data-toggle="modal" data-target="#exampleModal">
                          <%=timeend[i]%>
                        </button>
                        
                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Booking</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <form action="/booking" method="post">
                                  <div class="modal-body ">
                                    <input type="text" name="doctor" value="<%=doctor.id%>" style="display: none;">
                                    <input type="text" name="patient" value="<%=user.id%>" style="display: none;">
                                    <label for="">Name</label>
                                    <input type="text" class="form-control" placeholder="Full name" value="<%=user.FullName%>">
                                    <label for="">Sex </label>
                                    <input type="text" class="form-control" placeholder="Sex" value="<%=user.Sex%>">
                                    <label for="">Phone </label>
                                    <input type="text" class="form-control" placeholder="Phone" value="<%=user.MobileNumber%>">
                                    <label for="">Address </label>
                                    <input type="text" class="form-control" placeholder="Address" value="<%=user.Address%>">
                                    <label for="">Time Booking </label>
                                    <input type="text" class="form-control" placeholder="Time" value="<%=timeend[i]%>" name="Time">
                                    <label for="">Date Booking </label>
                                    <input type="text" class="form-control" placeholder="Date" value="<%=date%>/<%=month%>" name="Date">
                                    <label for="">Reason </label>
                                    <textarea name="reason" id="message" class="form-control" rows="6" placeholder="Enter Reason.." name="reason" required></textarea>
                                  </div>
                                  <div class="modal-footer">
                                    <button type="submit" class="btn-primary">Send</button>
                                  </div>
                              </form>
                            </div>
                          </div>
                        </div>
                         
                    <%}}%>  
                
            </div>
