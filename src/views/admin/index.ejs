    <div class="sidebar">
        <a href="/home">Home</a>
        <a class="active" href="/">User</a>
        <a href="/news-user">News User</a>
        <a href="/admin/get-post">Posts</a>
    </div>
      
    <div class="content">

    <div style="padding-left:16px ;">
            <div class="w3-container">
                <h2>List Table</h2>
                <table class="w3-table-all w3-hoverable">
                    <thead>
                        <tr class="w3-light-grey">
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>
                                <div class="dropdown" >
                                    <button class="dropbtn">List User</button>
                                    <div class="dropdown-content">
                                    <form action="/getDoctor" method="POST">
                                        <input type="text" value="Doctor" name="Doctor" style="display: none;">
                                        <button type="submit" href="/getDoctor">Doctor</button>
                                    </form>
                                    <form action="/getPatient" method="POST">
                                        <input type="text" value="Patient" name="Patient" style="display: none;">
                                        <button type="submit" href="/getDoctor">Patient</button>
                                    </form>
                                    <form action="/getAdmin" method="POST">
                                        <input type="text" value="Admin" name="Admin" style="display: none;">
                                        <button type="submit" href="/getAdmin">Admin</button>
                                    </form>
                                    </div>
                                </div>
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < datauser.length; i++) { %>
                            <tr>
                                <td>
                                    <%= datauser[i].id %>
                                </td>
                                <td>
                                    <%= datauser[i].SurName %>
                                </td>
                                <td>
                                    <%= datauser[i].Name %>
                                </td>
                                <td>
                                    <%= datauser[i].Job%>
                                </td>
                                <td style="display: none;">
                                    <%= datauser[i].BirthDay%>
                                </td>
                                <td class="row-td" >
                                    <form action="">
                                        <button type="button" > <a href="/more/user/<%= datauser[i].id %>" style="text-decoration: none;">See more</a> </button>
                                    </form>

                                    
                                    <form action="/updateusers/<%= datauser[i].id %>" method="GET">
                                        <button type="submit">Update</button>
                                    </form>


                                    <form action="/delete-user" method="POST">

                                        <input type="text" hidden value="<%= datauser[i].id %>" name="userID">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
    </div>
</div>
    <script>
        function w3_open() {
          document.getElementById("mySidebar").style.display = "block";
        }
        
        function w3_close() {
          document.getElementById("mySidebar").style.display = "none";
        }
        </script>
</body>

</html>